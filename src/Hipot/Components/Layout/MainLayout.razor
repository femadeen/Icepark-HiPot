@inherits LayoutComponentBase
@implements IDisposable
@inject NavigationManager NavigationManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <div class="main-layout">
        @if (!IsLoginPage())
        {
            <div class="top-nav-container">
                <NavMenu />
            </div>
        }

        <div class="main-content">
            <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
                <ErrorBoundary>
                    <ChildContent>
                        @Body
                    </ChildContent>
                    <ErrorContent Context="err">
                        <div style="color:red; padding:1rem; border:1px solid red; border-radius:8px;">
                            <h3>⚠ Something went wrong</h3>
                            <p>@err.Message</p>
                            <pre>@err.StackTrace</pre>
                        </div>
                    </ErrorContent>
                </ErrorBoundary>
            </MudContainer>
        </div>
    </div>
</MudLayout>

<style>
    .main-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .top-nav-container {
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .main-content {
        flex: 1;
        padding-top: 1rem;
    }

        .main-content .mud-container {
            padding-top: 1rem !important;
        }
</style>

@code {
    private bool IsLoginPage() => NavigationManager.Uri.EndsWith("/login");

    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object sender, LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
