<div class="pass-fail-overlay">
    <div class="pass-fail-panel">
        <div class="pass-fail-body">
            @if (IsPassed)
            {
                <img src="images/pass.png" />
                <h2>PASS</h2>
            }
            else
            {
                <img src="images/fail.png" />
                <h2>FAIL</h2>
            }
        </div>
        <div class="pass-fail-footer">
            <button class="btn-primary" @onclick="OnOkClicked">OK</button>
        </div>
    </div>
</div>

<style>
    .pass-fail-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .pass-fail-panel {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 300px;
        max-width: 90%;
        text-align: center;
    }

    .pass-fail-body {
        padding: 2rem;
    }

    .pass-fail-body img {
        width: 128px;
        height: 128px;
        margin-bottom: 1rem;
    }

    .pass-fail-body h2 {
        font-size: 2rem;
        font-weight: bold;
        margin: 0;
    }

    .pass-fail-footer {
        padding: 1rem;
        border-top: 1px solid #eee;
    }
</style>

@code {
    [Parameter]
    public bool IsPassed { get; set; }

    [Parameter]
    public EventCallback OnOkClicked { get; set; }
}
