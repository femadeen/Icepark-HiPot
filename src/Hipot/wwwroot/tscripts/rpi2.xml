<?xml version="1.0" encoding="utf-8"?>
<maintest>
	<theader tname="Raspberry Pi">
	  <trevision>1.0</trevision>
	  <tdescription>Raspberry Pi Functional Card Test.</tdescription>
	  <towner>Somsak Bo.</towner>
	</theader>
	<test tname="RPI DF Check 0">
		<srpwonly>SRP_0,[*enter*]</srpwonly>
		<delay>1000</delay>
		<srpronly>SRP_0</srpronly>
		<srpwrchk>SRP_0,df,pi@raspberrypi:~$,10</srpwrchk>		
		<chkinword>SRP_0,/dev/mmcblk0p1,failcont</chkinword>
	</test>
	<test tname="RPI DF Check 1">
		<srpwonly>SRP_0,[*enter*]</srpwonly>
		<delay>1000</delay>
		<srpronly>SRP_0</srpronly>
		<srpwrchk>SRP_0,df,pi@raspberrypi:~$,10</srpwrchk>		
		<chkinword>SRP_0,/dev/mmcblk0p1,failcont,[*ctl+c*]</chkinword>
	</test>
	
	<test tname="RPI DF Check 2">
		<srpwonly>SRP_0,[*enter*]</srpwonly>
		<delay>1000</delay>
		<srpronly>SRP_0</srpronly>
		<srpwrchk>SRP_0,df,pi@raspberrypi:~$1,1</srpwrchk>		
		<chkinword>SRP_0,/dev/mmcblk0p1,failstop</chkinword>
	</test>	
	
	<test tname="RPI DF VALUE TEST">
		<srpwonly>SRP_0,[*enter*]</srpwonly>
		<delay>1000</delay>		
		<srpronly>SRP_0</srpronly>
		<srpwrchk>SRP_0,df,pi@raspberrypi:~$,60000</srpwrchk>		
		<chkvalueinline>SRP_0,/dev/mmcblk0p1     [*X*]   [*Q*]     [*X*]  33% /boot,17000_20000,failcont</chkvalueinline>
	</test>	
	
	<posttest tname="ODC Upload">
		<confodcfail>(*odctestresult*)</confodcfail>
		<display>Post Test,[*enter*]</display>
	</posttest>
	
</maintest>